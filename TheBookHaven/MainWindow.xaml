<Window x:Class="TheBookHaven.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheBookHaven" 
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp" 
        xmlns:views="clr-namespace:TheBookHaven.Views" 
        xmlns:viewmodel="clr-namespace:TheBookHaven.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="boolToVisibilityConverter" />
    </Window.Resources>
    <Grid>

        <views:WelcomeView Visibility="{Binding IsWelcomeView, Converter={StaticResource boolToVisibilityConverter}}" />

        <Grid 
            Visibility="{Binding IsMainView, Converter={StaticResource boolToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

        <TextBlock Text="Bookstores"
                       Height="25"
                       Width="150"
                       FontSize="20"
                       FontFamily="Baskerville Old Face"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Margin="15"/>
            <ListBox Grid.Column="0"
                    Height="350"
                    Margin="7,50,3,34"
                    SelectionMode="Single"

                    SelectedItem="" >
                <TextBlock 
                    Text=""/>
            </ListBox>

        <Button x:Name="AddButton"
                    Grid.Column="1"
                    Height="40"
                    Width="40"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="212,5,0,5">
            <Button.Content>
                <fa:IconBlock Icon="HeartCirclePlus" />
            </Button.Content>
        </Button>

        <Button x:Name="RemoveButton"
                    Grid.Column="1"
                    Height="40"
                    Width="40"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="287,5,0,5">
            <Button.Content>
                <fa:IconBlock Icon="HeartCircleMinus" />
            </Button.Content>
        </Button>

        <DataGrid Grid.Column="1"
                      Height="350"
                      Margin="2,50,2,34">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" 
                                        Width="*"/>
                <DataGridTextColumn Header="ISBN" 
                                        Width="*"/>
                <DataGridTextColumn Header="Author" 
                                        Width="*"/>
                <DataGridTextColumn Header="Price" 
                                        Width="*"/>
                <DataGridTextColumn Header="Stockbalance" 
                                        Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        </Grid>
    </Grid>
</Window>
